// Build the ES module JS files and emits the *.d.ts files for the src/ folder.
// It ignores the tests/ folder because users of our NPM package don't need
// to have the source or type definitions for tests.
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/esm/",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["./src", "./entry"],
  "exclude": ["./entry/vexflow-debug-with-tests.ts"]
}
